[module/backlight]
type = internal/xbacklight
format = <ramp> <label>

label = %percentage:3%%

ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/openvpn]
type = custom/script
exec = $HOME/.config/polybar/openvpn.sh
exec-if = pgrep -x openvpn
interval = 60

[module/radio]
type = custom/script
exec = $HOME/.config/polybar/pepper.sh
exec-if=pactl list sink-inputs | grep "google-chrome" > /dev/null
interval = 30
format-underline = #8fa993
format-prefix = " "

[module/updates]
type = custom/script
exec = $HOME/.config/polybar/update_repos.sh
interval = 18000
format-underline = #268bd2
format-prefix = " "

[module/temperature]
type = internal/temperature

interval = 1
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input

warn-temperature = 70
label =  %temperature-c:2%
format-warn =  <label-warn>
format-warn-underline = #f00
format-underline-size = #f50a4d
format-spacing = 1

[module/keyboard]
type = internal/xkeyboard

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock
blacklist-2 = caps lock
label-layout =  %layout%

[module/battery]
type = internal/battery
